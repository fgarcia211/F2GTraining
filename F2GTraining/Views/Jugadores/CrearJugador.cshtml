<div class="show-team">
    <p>Nuevo jugador - Equipo: @ViewData["MENSAJE"]</p>
</div>

<div class="form-register-zone">
<form method="post">
    <div class="inputs-required-zone">
        <div class="input-required">
            <label>POSICION</label>
            <select name="idposicion">
                <option value="1">Portero</option>
                <option value="2">Defensa</option>
            </select>
        </div>
        <div class="input-required">
            <label>NOMBRE</label>
            <input type="text" name="nombre"/>
        </div>
    </div>

    <div class="inputs-optional-zone">
        <div class="input-optional">
            <label>DORSAL</label>
            <input type="number" name="dorsal"/>
        </div>
        <div class="input-optional">
            <label>EDAD</label>
            <input type="number" name="edad"/>
        </div>
        <div class="input-optional">
            <label>PESO</label>
            <input type="number" name="peso" step="0.01"/>
        </div>
        <div class="input-optional">
            <label>ALTURA</label>
            <input type="number" asp-format="{0:n2} name="altura" step="0.01"/>
        </div>
    </div>

    <button>Crear Jugador</button>
</form>
</div>

